</div>

<script type="text/javascript">

   

    $("#btnAdd").click(function () {

        var modelData = {
            Make: $("#ddlMake option:selected").text(),
            Model: $("#ddlModel option:selected").text(),
            Group: $("#ddlGroup option:selected").text(),

            CheckOutLocation: $("#ddlChecInLoc option:selected").text(),
            CheckInLocation: $("#ddlChecOutLoc option:selected").text(),
            NoOfVehicle: $("#txtNoOfVehicle").val(),

            RentalSum: $('#txtRentalSum').val(),
            Remarks: $('#txtRemarks').val(),

            ParcelFuelAmount: $('#cbPreSellFuel').is(":checked"),
            Delivery: $('#cbDelivery').is(":checked"),
            Collection: $('#cbCollection').is(":checked"),
            SCDW: $('#cbSCDW').is(":checked"),
            WS: $('#cbWS').is(":checked"),

            BabySeat: $('#cbBabySeat').is(":checked"),
            Wifi: $('#cbWifi').is(":checked"),
            ADI: $('#checkbox').is(":checked"),
        };

        quotaionDetail.push(modelData);

        closeDetailDialogue();
    });



</script>
