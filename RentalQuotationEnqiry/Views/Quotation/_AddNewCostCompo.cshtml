                            <td>(Entry field)</td>
                        </tr>
                        <tr style="height: 10px;">
                            <td><input type="checkbox" id="cbWifi"></td>
                            <td>Wifi</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr style="height: 10px;">
                            <td><input type="checkbox" id="cbADI"></td>
                            <td>ADI</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr style="height: 10px;">
                            <td><input type="checkbox" value=""></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr style="height: 10px;">
                            <td><input type="checkbox" value=""></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                <!-- 3rd table -->
                <table class="table table-bordered col-md-8 ml-2">
                    <thead>
                        <tr style="height: 10px;background-color: lightblue;">
                            <th scope="col">Variable Name</th>
                            <th scope="col">Amount</th>
                            <th scope="col">VAT</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>RENTAL SUM(Rate should be taken )</td>
